<h1>Корзина</h1>

<div id="cart">
    {{#if cart.courses.length}}
<table>
    <thead>
        <th>Название</th>
        <th>Количество</th>
        <th>Действие</th>
    </thead>
    <tbody>
        {{#each cart.courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
    <p><strong>Цена:</strong><span class="price">{{price}}</span></p>
</table>
{{else}}
    <p> Корзина пуста {{courses}}</p>
{{/if}}
</div>
